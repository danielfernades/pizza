{% extends "@Pizza/baselayout.html.twig" %}

{% block title %}{{ "user.list.title"|trans() }}{% endblock title %}

{% block content %}
    <h1>{{ "user.list.title"|trans() }}</h1>
    {% if users|length > 0 %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ "table.title"|trans() }}</th>
                <th>{{ "table.actions"|trans() }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user }}</td>
                    <td>
                        <a class="btn" href="{{ url('user_edit', {'id': user.id }) }}">{{ "user.list.edit"|trans() }}</a>
                        <a class="btn btn-danger" href="{{ url('user_delete', {'id': user.id }) }}">{{ "user.list.delete"|trans() }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a class="btn" href="{{ url('user_edit') }}">{{ "user.list.create"|trans() }}</a>
{% endblock %}
