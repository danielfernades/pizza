{% extends "baselayout.html.twig" %}

{% block content %}
    <h1>{{ "orders"|trans() }}</h1>
    {% if orders|length > 0 %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ "title"|trans() }}</th>
                <th>{{ "actions"|trans() }}</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order }}</td>
                    <td>
                        <a class="btn" href="{{ url('order_item_list', {'id': order.id }) }}">{{ "edit"|trans() }}</a>
                        <a class="btn" href="{{ url('order_show', {'id': order.id }) }}">{{ "show"|trans() }}</a>
                        <a class="btn btn-danger" href="{{ url('order_delete', {'id': order.id }) }}">{{ "delete"|trans() }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a class="btn" href="{{ url('order_create') }}">{{ "create"|trans() }}</a>
{% endblock %}