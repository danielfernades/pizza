{% extends "baselayout.html.twig" %}

{% block title %}{{ "order.listitem.title"|trans() }} - {{ order.orderdatetime|date("d.m.Y H:i") }}{% endblock title %}

{% block content %}
    <h1>{{ "order.show.title"|trans() }} - {{ order.orderdatetime|date("d.m.Y H:i") }}</h1>
    {% if order.orderitems|length > 0 %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ "form.label.eat"|trans() }}</th>
                <th>{{ "form.label.drink"|trans() }}</th>
                <th>{{ "form.label.username"|trans() }}</th>
            </tr>
            </thead>
            <tbody>
            {% for orderitem in order.orderitems %}
                <tr>
                    <td>{{ orderitem.eat }}</td>
                    <td>{{ orderitem.drink }}</td>
                    <td>{{ orderitem.user.username }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a class="btn" href="{{ url('order_list') }}">{{ "order.show.back"|trans() }}</a>
{% endblock %}