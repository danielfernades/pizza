{% extends "baselayout.html.twig" %}

{% block content %}
    <h1>{{ order }}</h1>
    {% if order.orderitems|length > 0 %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ "eat"|trans() }}</th>
                <th>{{ "drink"|trans() }}</th>
                <th>{{ "employee"|trans() }}</th>
            </tr>
            </thead>
            <tbody>
            {% for orderitem in order.orderitems %}
                <tr>
                    <td>{{ orderitem.eat }}</td>
                    <td>{{ orderitem.drink }}</td>
                    <td>{{ orderitem.employee }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a class="btn" href="{{ url('order_list') }}">{{ "back"|trans() }}</a>
{% endblock %}