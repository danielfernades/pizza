{% extends "baselayout.html.twig" %}

{% block title %}{{ "order.listitem.title"|trans() }} - {{ order.orderdatetime|date("d.m.Y H:i") }}{% endblock title %}

{% block content %}
    <h1>{{ "order.listitem.title"|trans() }} - {{ order.orderdatetime|date("d.m.Y H:i") }}</h1>
    {% if order.orderitems|length > 0 %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ "table.title"|trans() }}</th>
                <th>{{ "table.actions"|trans() }}</th>
            </tr>
            </thead>
            <tbody>
            {% for orderitem in order.orderitems %}
                <tr>
                    <td>{{ orderitem }}</td>
                    <td>
                        <a class="btn" href="{{ url('order_item_edit', {'id': order.id, 'itemid': orderitem.id }) }}">{{ "order.listitem.edit"|trans() }}</a>
                        <a class="btn btn-danger" href="{{ url('order_item_delete', {'id': order.id, 'itemid': orderitem.id }) }}">{{ "order.listitem.delete"|trans() }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a class="btn" href="{{ url('order_item_edit', {'id': order.id}) }}">{{ "order.listitem.create"|trans() }}</a>
    <a class="btn" href="{{ url('order_list') }}">{{ "order.listitem.back"|trans() }}</a>
{% endblock %}