{% extends "baselayout.html.twig" %}

{% block content %}
    <h1>{{ "users"|trans() }}</h1>
    {% if users|length > 0 %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ "title"|trans() }}</th>
                <th>{{ "actions"|trans() }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user }}</td>
                    <td>
                        <a class="btn" href="{{ url('user_edit', {'id': user.id }) }}">{{ "edit"|trans() }}</a>
                        <a class="btn btn-danger" href="{{ url('user_delete', {'id': user.id }) }}">{{ "delete"|trans() }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a class="btn" href="{{ url('user_edit') }}">{{ "create"|trans() }}</a>
{% endblock %}